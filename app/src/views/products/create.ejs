<% layout('layout') -%>
<h3>Tambah Produk</h3>

<% if (errors.length) { %>
  <div class="alert alert-danger">
    <ul class="mb-0">
      <% errors.forEach(e => { %><li><%= e %></li><% }) %>
    </ul>
  </div>
<% } %>

<form method="post" action="/products/create" class="row g-3">
  <div class="col-md-6">
    <label class="form-label">Nama Produk</label>
    <input name="Nama_Produk" class="form-control" value="<%= payload.Nama_Produk || '' %>">
  </div>
  <div class="col-md-3">
    <label class="form-label">Harga</label>
    <input name="Harga" type="number" min="0" class="form-control" value="<%= payload.Harga || 0 %>">
  </div>
  <div class="col-md-3">
    <label class="form-label">Stok</label>
    <input name="Stok" type="number" min="0" class="form-control" value="<%= payload.Stok || 0 %>">
  </div>
  <div class="col-md-6">
    <label class="form-label">Kategori</label>
    <select name="ID_Kategori" class="form-select">
      <option value="">Pilih Kategori</option>
      <% categories.forEach(c => { %>
        <option value="<%= c.ID %>"><%= c.Nama_Kategori %></option>
      <% }) %>
    </select>
  </div>
  <div class="col-12">
    <label class="form-label">Deskripsi</label>
    <textarea name="Deskripsi" class="form-control" rows="3"><%= payload.Deskripsi || '' %></textarea>
  </div>
  <div class="col-12">
    <button class="btn btn-primary">Simpan</button>
    <a href="/products" class="btn btn-secondary">Batal</a>
  </div>
</form>
