<% layout('layout') -%>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Daftar Produk</h3>
  <a href="/products/create" class="btn btn-primary">Tambah Produk</a>
</div>

<form class="row g-2 mb-3" method="get" action="/products">
  <div class="col-md-6">
    <input type="text" name="q" value="<%= q %>" class="form-control" placeholder="Cari nama produk...">
  </div>
  <div class="col-md-4">
    <select name="category" class="form-select">
      <option value="">Semua Kategori</option>
      <% categories.forEach(c => { %>
        <option value="<%= c.ID %>" <%= String(category)===String(c.ID) ? 'selected' : '' %>><%= c.Nama_Kategori %></option>
      <% }) %>
    </select>
  </div>
  <div class="col-md-2">
    <button class="btn btn-secondary w-100">Filter</button>
  </div>
</form>

<div class="row">
  <% products.forEach(p => { %>
    <div class="col-md-4 mb-3">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= p.Nama_Produk %></h5>
          <p class="card-text text-muted">Kategori: <%= p.Nama_Kategori || '-' %></p>
          <p class="card-text">Harga: Rp <%= p.Harga %></p>
          <p class="card-text">Stok: <%= p.Stok %></p>
          <a href="/products/<%= p.ID_Produk %>/detail" class="btn btn-outline-primary btn-sm">Detail</a>
          <a href="/products/<%= p.ID_Produk %>/edit" class="btn btn-outline-warning btn-sm">Edit</a>
          <a href="/products/<%= p.ID_Produk %>/delete" class="btn btn-outline-danger btn-sm">Hapus</a>
        </div>
      </div>
    </div>
  <% }) %>
</div>
